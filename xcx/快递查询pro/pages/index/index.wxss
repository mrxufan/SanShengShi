.container{position: fixed;width: 100%;left: 0;top: 0;}
.form-wrap{width: 80%;margin: 30rpx auto;}
.form-wrap .form-item{display: flex;height: 80rpx;line-height: 80rpx;}
.form-wrap .form-item input{flex: 1;height: 80rpx;line-height: 80rpx;border-bottom: 2rpx solid #ccc;text-align: center;color: #ffa500;}
.form-wrap .form-item .picker-wrap{flex: 1;text-align: center;color: #a52a2a;}

.search-btn{width: 80%;margin: 0 auto;background: #ffa500;color: #fff;margin-top: 10%;}
.search-btn-hover{opacity: .8;}
.result{width: 80%;margin: 0 auto;border-top: 2rpx solid #ccc;margin-top: 10%;height: 55vh;padding-top: 20rpx;position: relative;}
.result .result-wrap{position: relative;padding-left: 100rpx;}
.result .result-wrap .item:nth-child(1){color: #25ab79;}
.result .result-wrap .item:nth-child(1)::before{background:#25ab79; }
.result .result-wrap .item{border-bottom: 2rpx solid #ccc;padding: 20rpx 0;font-size: 28rpx;position: relative;}
.result .result-wrap .item::before{content: '';width: 20rpx;height: 20rpx;background: red;position: absolute;left: -70rpx;top: 50%;display: block;border-radius: 50%;background: #ccc;transform: translateY(-50%);z-index: 10;}
.result .result-wrap .item::after{content: '';width: 2rpx;height: 100%;background: #ccc;position: absolute;left: -60rpx;top: -2rpx;display: block;}
.result .result-wrap .item .time{margin-top: 10rpx;}

.default-ressult{width:100%;position: absolute;top:50%;transform: translateY(-50%);text-align: center;color: #666;font-size: 30rpx;}

